[
  {
    "resourceType": "purchase_request",
    "displayName": "Purchase Request",
    "description": "Purchase requests for procurement of goods and services",
    "category": "procurement",
    "version": "1.0",
    "isActive": true,
    "createdBy": "system",
    "updatedBy": "system",
    "definition": {
      "actions": [
        {
          "id": "view",
          "name": "View",
          "description": "View purchase request details",
          "group": "read",
          "requiresApprovalLimit": false,
          "auditLevel": "basic"
        },
        {
          "id": "create",
          "name": "Create",
          "description": "Create new purchase request",
          "group": "write",
          "requiresApprovalLimit": false,
          "auditLevel": "standard"
        },
        {
          "id": "edit",
          "name": "Edit",
          "description": "Edit existing purchase request",
          "group": "write",
          "requiresApprovalLimit": false,
          "auditLevel": "standard",
          "conditions": ["status == 'draft'"]
        },
        {
          "id": "submit",
          "name": "Submit for Approval",
          "description": "Submit purchase request for approval",
          "group": "workflow",
          "requiresApprovalLimit": false,
          "auditLevel": "high"
        },
        {
          "id": "approve_department",
          "name": "Approve - Department Level",
          "description": "Approve purchase request at department level",
          "group": "approval",
          "requiresApprovalLimit": true,
          "approvalLimitAttribute": "departmentLimit",
          "auditLevel": "high"
        },
        {
          "id": "approve_finance",
          "name": "Approve - Finance Level",
          "description": "Approve purchase request at finance level",
          "group": "approval",
          "requiresApprovalLimit": true,
          "approvalLimitAttribute": "financeLimit",
          "auditLevel": "critical"
        },
        {
          "id": "approve_gm",
          "name": "Approve - General Manager",
          "description": "Approve purchase request at GM level",
          "group": "approval",
          "requiresApprovalLimit": true,
          "approvalLimitAttribute": "gmLimit",
          "auditLevel": "critical"
        },
        {
          "id": "reject",
          "name": "Reject",
          "description": "Reject purchase request",
          "group": "workflow",
          "requiresApprovalLimit": false,
          "auditLevel": "high"
        },
        {
          "id": "recall",
          "name": "Recall",
          "description": "Recall submitted purchase request",
          "group": "workflow",
          "requiresApprovalLimit": false,
          "auditLevel": "standard"
        },
        {
          "id": "convert_to_po",
          "name": "Convert to Purchase Order",
          "description": "Convert approved PR to purchase order",
          "group": "workflow",
          "requiresApprovalLimit": false,
          "auditLevel": "high"
        },
        {
          "id": "export",
          "name": "Export",
          "description": "Export purchase request data",
          "group": "utility",
          "requiresApprovalLimit": false,
          "auditLevel": "standard"
        }
      ],
      "attributes": [
        {
          "name": "value",
          "type": "number",
          "description": "Total monetary value of the request",
          "required": true,
          "sensitive": false
        },
        {
          "name": "status",
          "type": "string",
          "description": "Current status of the request",
          "required": true,
          "allowedValues": ["draft", "submitted", "department_approved", "finance_approved", "gm_approved", "rejected", "converted"],
          "sensitive": false
        },
        {
          "name": "department",
          "type": "string",
          "description": "Requesting department",
          "required": true,
          "sensitive": false
        },
        {
          "name": "location",
          "type": "string",
          "description": "Requesting location",
          "required": true,
          "sensitive": false
        },
        {
          "name": "requestedBy",
          "type": "string",
          "description": "User who created the request",
          "required": true,
          "sensitive": false
        },
        {
          "name": "priority",
          "type": "string",
          "description": "Priority level",
          "allowedValues": ["low", "normal", "high", "urgent"],
          "sensitive": false
        },
        {
          "name": "vendor",
          "type": "string",
          "description": "Preferred vendor",
          "required": false,
          "sensitive": false
        },
        {
          "name": "category",
          "type": "string",
          "description": "Purchase category",
          "allowedValues": ["food", "beverage", "supplies", "equipment", "service", "maintenance"],
          "sensitive": false
        }
      ],
      "workflows": [
        {
          "name": "approval",
          "description": "Standard approval workflow",
          "stages": [
            {
              "name": "draft",
              "displayName": "Draft",
              "description": "Initial creation stage",
              "allowedActions": ["edit", "submit", "delete"]
            },
            {
              "name": "submitted",
              "displayName": "Submitted",
              "description": "Submitted for approval",
              "allowedActions": ["approve_department", "reject", "recall"]
            },
            {
              "name": "department_approved",
              "displayName": "Department Approved",
              "description": "Approved by department manager",
              "allowedActions": ["approve_finance", "reject"]
            },
            {
              "name": "finance_approved",
              "displayName": "Finance Approved",
              "description": "Approved by finance team",
              "allowedActions": ["approve_gm", "convert_to_po", "reject"]
            },
            {
              "name": "gm_approved",
              "displayName": "GM Approved",
              "description": "Approved by general manager",
              "allowedActions": ["convert_to_po"]
            }
          ]
        }
      ],
      "classification": {
        "levels": ["public", "internal", "confidential", "restricted"],
        "defaultLevel": "internal",
        "rules": [
          {
            "condition": "value > 25000",
            "level": "confidential"
          },
          {
            "condition": "category == 'equipment'",
            "level": "confidential"
          }
        ]
      },
      "approvalLimits": {
        "departmentLimit": 5000,
        "financeLimit": 25000,
        "gmLimit": 100000
      }
    }
  },
