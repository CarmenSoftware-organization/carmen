# ABAC Permission Management Database Configuration
# Copy this file to .env.local or add these variables to your existing .env file

# PostgreSQL Database Connection
DATABASE_URL="postgresql://username:password@localhost:5435/carmen_abac_db"

# Replace with your actual database credentials:
# - username: your PostgreSQL username
# - password: password (as specified)
# - host: localhost (as specified)
# - port: 5435 (as specified)
# - database: carmen_abac_db (or your preferred database name)

# Example with the credentials you provided:
# DATABASE_URL="postgresql://postgres:password@localhost:5435/carmen_abac_db"

# Additional PostgreSQL Configuration (Optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5435
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=carmen_abac_db

# Prisma Configuration
PRISMA_GENERATE_DATAPROXY=false
PRISMA_HIDE_UPDATE_MESSAGE=true

# ABAC System Configuration
ABAC_CACHE_TTL=300000
ABAC_MAX_POLICY_DEPTH=10
ABAC_EVALUATION_TIMEOUT=5000
ABAC_AUDIT_LEVEL=full