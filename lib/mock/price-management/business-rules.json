{
  "businessRules": [
    {
      "id": "rule-001",
      "name": "Preferred Vendor Priority",
      "description": "Prioritize preferred vendors for office supplies when quantity is less than 100 units",
      "priority": 1,
      "isActive": true,
      "category": "vendor-selection",
      "conditions": [
        {
          "id": "cond-001",
          "field": "product.category",
          "operator": "equals",
          "value": "office-supplies",
          "logicalOperator": "AND"
        },
        {
          "id": "cond-002", 
          "field": "request.quantity",
          "operator": "lessThan",
          "value": 100,
          "logicalOperator": "AND"
        },
        {
          "id": "cond-003",
          "field": "vendor.isPreferred",
          "operator": "equals",
          "value": true,
          "logicalOperator": null
        }
      ],
      "actions": [
        {
          "id": "action-001",
          "type": "assignVendor",
          "parameters": {
            "vendorSelectionMethod": "preferred",
            "priorityBoost": 10
          }
        }
      ],
      "createdAt": "2024-01-15T10:30:00Z",
      "updatedAt": "2024-01-20T14:45:00Z",
      "createdBy": "user-001",
      "lastTriggered": "2024-01-25T09:15:00Z",
      "triggerCount": 45,
      "successRate": 92.5
    },
    {
      "id": "rule-002",
      "name": "Bulk Discount Application",
      "description": "Apply bulk pricing when quantity exceeds vendor minimum bulk quantity",
      "priority": 2,
      "isActive": true,
      "category": "pricing",
      "conditions": [
        {
          "id": "cond-004",
          "field": "request.quantity",
          "operator": "greaterThan",
          "value": "vendor.bulkMinQuantity",
          "logicalOperator": "AND"
        },
        {
          "id": "cond-005",
          "field": "vendor.hasBulkPricing",
          "operator": "equals",
          "value": true,
          "logicalOperator": null
        }
      ],
      "actions": [
        {
          "id": "action-002",
          "type": "setPrice",
          "parameters": {
            "priceType": "bulk",
            "discountPercentage": 15
          }
        }
      ],
      "createdAt": "2024-01-10T08:20:00Z",
      "updatedAt": "2024-01-18T16:30:00Z",
      "createdBy": "user-002",
      "lastTriggered": "2024-01-24T11:20:00Z",
      "triggerCount": 28,
      "successRate": 96.4
    },
    {
      "id": "rule-003",
      "name": "High Value Manual Review",
      "description": "Flag items over $5000 for manual review and approval",
      "priority": 3,
      "isActive": true,
      "category": "approval",
      "conditions": [
        {
          "id": "cond-006",
          "field": "price.total",
          "operator": "greaterThan",
          "value": 5000,
          "logicalOperator": null
        }
      ],
      "actions": [
        {
          "id": "action-003",
          "type": "flagForReview",
          "parameters": {
            "reviewType": "high-value",
            "approvalRequired": true,
            "notifyApprovers": true
          }
        }
      ],
      "createdAt": "2024-01-05T12:00:00Z",
      "updatedAt": "2024-01-22T10:15:00Z",
      "createdBy": "user-003",
      "lastTriggered": "2024-01-23T15:45:00Z",
      "triggerCount": 12,
      "successRate": 100
    },
    {
      "id": "rule-004",
      "name": "Local Vendor Preference",
      "description": "Prefer local vendors for urgent requests to reduce delivery time",
      "priority": 4,
      "isActive": false,
      "category": "vendor-selection",
      "conditions": [
        {
          "id": "cond-007",
          "field": "request.urgency",
          "operator": "equals",
          "value": "urgent",
          "logicalOperator": "AND"
        },
        {
          "id": "cond-008",
          "field": "vendor.location",
          "operator": "equals",
          "value": "local",
          "logicalOperator": null
        }
      ],
      "actions": [
        {
          "id": "action-004",
          "type": "assignVendor",
          "parameters": {
            "vendorSelectionMethod": "location-based",
            "maxDistance": 50
          }
        }
      ],
      "createdAt": "2024-01-12T14:30:00Z",
      "updatedAt": "2024-01-19T09:45:00Z",
      "createdBy": "user-001",
      "lastTriggered": null,
      "triggerCount": 0,
      "successRate": 0
    },
    {
      "id": "rule-005",
      "name": "Multi-Currency Normalization",
      "description": "Convert all foreign currency prices to USD for comparison",
      "priority": 5,
      "isActive": true,
      "category": "currency",
      "conditions": [
        {
          "id": "cond-009",
          "field": "price.currency",
          "operator": "not_equals",
          "value": "USD",
          "logicalOperator": null
        }
      ],
      "actions": [
        {
          "id": "action-005",
          "type": "convertCurrency",
          "parameters": {
            "targetCurrency": "USD",
            "useCurrentRate": true
          }
        }
      ],
      "createdAt": "2024-01-08T11:15:00Z",
      "updatedAt": "2024-01-21T13:20:00Z",
      "createdBy": "user-002",
      "lastTriggered": "2024-01-25T08:30:00Z",
      "triggerCount": 67,
      "successRate": 98.5
    }
  ],
