# Production Environment Variables for Vercel
# IMPORTANT: Copy these to Vercel Environment Variables Dashboard
#
# NOTE: AI API keys (ANTHROPIC, OPENAI, etc.) are OPTIONAL and not needed
# for the core ERP functionality. Only add them if you plan to use AI features.

# Application Environment
NODE_ENV=production

# CRITICAL SECURITY VARIABLES - REQUIRED FOR BUILD
# Generate new secure values for production!
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_64_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_64_CHARS
JWT_REFRESH_EXPIRES_IN=7d

# Session Security
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_64_CHARS
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Encryption (EXACTLY 32 characters!)
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_STRING_HERE
ENCRYPTION_ALGORITHM=aes-256-gcm

# Database - Use Vercel Postgres or your production database
DATABASE_URL=postgresql://user:password@host:port/database

# Database Connection Pool
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=10
DB_CIRCUIT_BREAKER=true
DB_MONITORING=true
DB_TIMEOUTS=true
DB_CB_FAILURE_THRESHOLD=5
DB_CB_TIMEOUT=60000
DB_HEALTH_CHECK_INTERVAL=30000

# API Security & Rate Limiting
API_RATE_LIMIT_WINDOW=900
API_RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true
CSP_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# Security Monitoring
FAILED_LOGIN_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=1800

# Alert Thresholds
DB_ALERT_HEALTH_SCORE_THRESHOLD=70
DB_ALERT_POOL_UTILIZATION_THRESHOLD=80
DB_ALERT_QUERY_TIME_THRESHOLD=1000
DB_ALERT_ERROR_RATE_THRESHOLD=5
DB_ALERT_CONNECTION_TIMEOUT_THRESHOLD=3

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
UPLOAD_PATH=./uploads

# Email Configuration
EMAIL_SERVICE=disabled

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MULTI_CURRENCY=true
FEATURE_VENDOR_PORTAL=true
FEATURE_MOBILE_APP=false
ENABLE_METRICS=false

# Redis (Optional)
REDIS_DB=0

# Vercel-specific
VERCEL=1
